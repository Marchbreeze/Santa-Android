<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor" tools:targetApi="l">@color/navy</item>

        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>

    <style name="Theme.Santa.Splash" parent="Theme.SplashScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="windowSplashScreenBackground">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/AppTheme.Base</item>
    </style>

    <style name="TitleOfCardView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_createroom_cardview_titles</item>
    </style>

    <style name="PreviewTextOfCreateRoom" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_createroom_expiration_description</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="PreviewTextOfCreateConfirm" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size_createconfirm_expiration_description</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="RecyclerViewScrollbar">
        <item name="android:scrollbarSize">@dimen/size_createmission_scrollbar</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_round_30</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="SantaBackground"></style>

    <style name="SantaBackground.SubTask">
        <item name="santa">true</item>
        <item name="backKey">true</item>
    </style>

    <style name="SantaBackground.BigTitle">
        <item name="backgroundLogo">true</item>
        <item name="santaHead">true</item>
        <item name="snowflake">true</item>
    </style>

    <style name="SantaBackground.Main">
        <item name="backgroundLogo">true</item>
        <item name="snowflake">true</item>
    </style>

    <style name="SantaBackground.ResultTask">
        <item name="backKey">true</item>
    </style>

    <style name="SantaBackground.Confirm">
        <item name="backKey">true</item>
        <item name="santa">true</item>
        <item name="rudolf">true</item>
        <item name="snowMan">true</item>
    </style>

</resources>
