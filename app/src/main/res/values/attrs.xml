<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SantaEditText">
        <attr name="rightButton" format="enum">
            <enum name="none" value="0"/>
            <enum name="add" value="1"/>
            <enum name="delete" value="2"/>
        </attr>
        <attr name="hint" format="string"/>
    </declare-styleable>

    <declare-styleable name="SantaImageRoundButton">
        <attr name="title" format="string"/>
        <attr name="description" format="string"/>
    </declare-styleable>

    <declare-styleable name="SantaCheckBox">
        <attr name="text" format="string"/>
        <attr name="isChecked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SantaSmallButton">
        <attr name="buttonMode" format="enum">
            <enum name="minus" value="0"/>
            <enum name="add" value="1"/>
            <enum name="cancel" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SantaSwitch">
        <attr name="onText" format="string"/>
        <attr name="offText" format="string"/>
        <attr name="isOn" format="boolean"/>
    </declare-styleable>

</resources>